<Window x:Class="TetrisGame.Game"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TetrisGame"
        mc:Ignorable="d"
        Title="Tetris" Height="606.4" Width="1073.6" HorizontalAlignment="Left" VerticalAlignment="Top" ResizeMode="CanMinimize"  KeyDown="Window_KeyDown">
    <Window.Background>
        <ImageBrush>
            <ImageBrush.ImageSource>
                <BitmapImage UriSource="GraficaTetris/TetrisLogo.jpg"/>
            </ImageBrush.ImageSource>
        </ImageBrush>
    </Window.Background>

    <Grid>
        <Canvas x:Name="CanvasGioco" Background="#101010" Width="250" Height="510" ClipToBounds="True" Loaded="CanvasGioco_LoadedAsync"/>
        <TextBox HorizontalAlignment="Left" Height="101" Margin="747,146,0,0" TextWrapping="Wrap" Text="Prossimo blocco:" VerticalAlignment="Top" Width="203" Background="White" FontSize="40" FontFamily="Impact" TextAlignment="Center"/>
        <Image x:Name="ImgProxBlocco" HorizontalAlignment="Left" Height="179" Margin="747,247,0,0" VerticalAlignment="Top" Width="203" Stretch="Fill"/>
        <Label Content="Tempo-&gt;" HorizontalAlignment="Left" Height="58" VerticalAlignment="Top" Width="150" Background="White" FontSize="40" FontFamily="Impact"/>
        <Label x:Name="lblTempo" Content="" HorizontalAlignment="Left" Height="58" VerticalAlignment="Top" Width="150" Background="White" FontSize="40" FontFamily="Impact" Margin="150,0,0,0"/>
        <Label Content="Stai giocando contro:" HorizontalAlignment="Left" Height="58" VerticalAlignment="Top" Width="404" Background="White" FontSize="40" FontFamily="Impact" Margin="0,102,0,0" HorizontalContentAlignment="Center"/>
        <Label x:Name="lblAvversario" Content="" HorizontalAlignment="Left" Height="58" VerticalAlignment="Top" Width="404" Background="White" FontSize="40" FontFamily="Impact" Margin="0,160,0,0" HorizontalContentAlignment="Center"/>
        <Label Content="Punteggio:" HorizontalAlignment="Left" Height="58" VerticalAlignment="Top" Width="197" Background="White" FontSize="40" FontFamily="Impact" Margin="682,57,0,0"/>
        <Label x:Name="lblPunteggio" Content="" HorizontalAlignment="Left" Height="58" VerticalAlignment="Top" Width="191" Background="White" FontSize="40" FontFamily="Impact" Margin="876,57,0,0"/>
        <Label Content="che ha risolto:" HorizontalAlignment="Left" Height="58" VerticalAlignment="Top" Width="404" Background="White" FontSize="40" FontFamily="Impact" Margin="0,217,0,0" HorizontalContentAlignment="Center"/>
        <Label x:Name="lblPuntAvversario" Content="" HorizontalAlignment="Left" Height="66" VerticalAlignment="Top" Width="404" Background="White" FontSize="40" FontFamily="Impact" Margin="0,270,0,0" HorizontalContentAlignment="Center"/>
        <StackPanel x:Name="GameOverMenu" Visibility="Hidden" HorizontalAlignment="Left" Height="469" Margin="355,50,0,0" VerticalAlignment="Top" Width="355" Background="White">
            <Label Content="GAME OVER!" HorizontalAlignment="Left" Height="95" VerticalAlignment="Top" Width="355" Background="#FF0083FF" FontSize="40" FontFamily="Impact" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            <Label Content="Risultati:" HorizontalAlignment="Left" Height="95" VerticalAlignment="Top" Width="355" Background="#FF0083FF" FontSize="40" FontFamily="Impact" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            <Label x:Name="lblTotPunteggio" Content="Punteggio:" HorizontalAlignment="Left" Height="92" Width="355" FontSize="40" FontFamily="Impact" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="Red"/>
            <Label x:Name="lblTotTempo" Content="Tempo: " HorizontalAlignment="Left" Height="92" Width="355" FontSize="40" FontFamily="Impact" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="Red"/>
            <Button x:Name="BtnHome" Content="Torna al menù principale" HorizontalAlignment="Left" Height="96" Width="355" FontSize="30" FontFamily="Impact" Click="BtnHome_Click"/>
        </StackPanel>
    </Grid>
</Window>
