<Window x:Class="TetrisGame.Game"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TetrisGame"
        mc:Ignorable="d"
        Title="Tetris" Height="600" Width="800" HorizontalAlignment="Left" VerticalAlignment="Top" ResizeMode="CanMinimize"  KeyDown="Window_KeyDown">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF001346" Offset="0"/>
            <GradientStop Color="#FF000C81" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>

    <Grid x:Name="grid" Margin="0,0,0,1">
        <Viewbox Grid.Row="1"
                Grid.Column="1" Margin="0,0,0,20">
            <Canvas x:Name="CanvasGioco"
                Background="Black"
                Width="250"
                Height="500"
                ClipToBounds="True"
                Loaded="CanvasGioco_Loaded"/>

        </Viewbox>



    </Grid>




</Window>
